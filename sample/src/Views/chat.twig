{% extends 'base.twig' %}

{% block body %}
    <form id="frm_login" action="" method="post">
        <p>
            <label for="login">Login</label>
            <input type="text" name="login" id="login" autofocus />
            <input type="submit" />
        </p>
    </form>
    <form id="frm_msg" action="" method="post" style="display: none;">
        <p>
            <label for="msg">Message</label>
            <input type="text" name="msg" id="msg" autofocus />
            <input type="submit" />
        </p>
    </form>
    <ul id="chat_msg">
    </ul>
{% endblock %}
